@{
    ViewBag.Title = "Chi tiết hóa đơn";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
    var ds = Model as List<Dictionary<string, object>>;
}

<div class="container mt-4">
    <h3 class="text-center mb-4">Chi tiết hóa đơn @ViewBag.MaHD</h3>

    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Mã sản phẩm</th>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @if (ds != null && ds.Count > 0)
            {
                foreach (var item in ds)
                {
                    <tr>
                        <td>@item["MaSP"]</td>
                        <td>@item["TenSP"]</td>
                        <td>@item["SoLuong"]</td>
                        <td>@item["DonGia"]</td>
                        <td>@item["ThanhTien"]</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">Không có dữ liệu.</td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("LichSuMuaHang", "KhachHang")" class="btn btn-secondary">
        ← Quay lại
    </a>
</div>
