@{
    ViewBag.Title = "Lịch sử mua hàng";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}

<h3 class="text-center mt-3"><i class="bi bi-receipt"></i> Lịch sử mua hàng</h3>

<table class="table table-bordered mt-3">
    <thead class="table-light">
        <tr>
            <th>Mã hóa đơn</th>
            <th>Ngày lập</th>
            <th>Tổng tiền</th>
            <th>Phương thức</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hd in Model)
        {
            <tr>
                <td>@hd["MaHD"]</td>
                <td>@hd["NgayLap"]</td>
                <td>@hd["TongTien"]</td>
                <td>@hd["PhuongThucTT"]</td>
                <td>@hd["TrangThai"]</td>
                <td>
                    <a href="@Url.Action("ChiTietHoaDon", "KhachHang", new { id = hd["MaHD"].ToString().Trim() })"
                       class="btn btn-outline-primary btn-sm">
                        Xem chi tiết
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
