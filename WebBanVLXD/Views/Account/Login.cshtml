@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="login-wrapper">
            <h3 class="login-title">Đăng nhập</h3>

            @if (ViewBag.ResetSuccess != null)
            {
                <div class="alert alert-success">@ViewBag.ResetSuccess</div>
            }
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form method="post" action="@Url.Action("Login","Account")" class="mt-3">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="visually-hidden" for="Email">Email</label>
                    <input id="Email" type="email" name="Email" class="form-control form-control-lg" placeholder="Tài khoản Email" required aria-required="true" />
                </div>

                <div class="mb-3" style="position:relative;">
                    <label class="visually-hidden" for="MatKhau">Mật khẩu</label>
                    <input id="MatKhau" type="password" name="MatKhau" class="form-control form-control-lg" placeholder="Mật khẩu" required aria-required="true" />
                    <a href="@Url.Action("ForgotPassword","Account")" class="forgot-link">Quên mật khẩu?</a>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-login w-100">Đăng Nhập Ngay</button>
                </div>

                <div class="mt-3">
                    <a href="@Url.Action("Register","Account")" class="btn btn-create w-100">Tạo tài khoản mới</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<style>
    body {
        background: #f3f3f3;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-wrapper {
        max-width: 720px;
        margin: 60px auto;
        padding: 48px;
        background: #fff;
        border: 1px solid #eee;
        box-shadow: 0 0 0 8px rgba(0,0,0,0.02);
    }

    .login-title {
        font-weight: 700;
        font-size: 22px;
        text-align: center;
        margin-bottom: 28px;
        color: #333;
    }

    .form-control-lg {
        height: 56px;
        padding: 14px 18px;
        font-size: 16px;
    }

    .btn-login {
        background: #b33a32;
        border-color: #b33a32;
        color: #fff;
        height: 52px;
        font-size: 18px;
        font-weight: 600;
        transition: box-shadow .12s ease, transform .08s ease, outline .12s ease;
    }

    .btn-create {
        background: #fff;
        border: 1px solid #ddd;
        color: #333;
        height: 48px;
        font-size: 16px;
        transition: box-shadow .12s ease, transform .08s ease, outline .12s ease;
    }


        .btn-login:hover,
        .btn-login:focus,
        .btn-create:hover,
        .btn-create:focus {
            outline: 2px solid rgba(179,58,50,0.95);
            outline-offset: 3px;
            box-shadow: 0 6px 20px rgba(179,58,50,0.09);
            transform: translateY(-1px);
        }

    .forgot-link {
        display: inline-block;
        margin-top: 8px;
        float: right;
        font-size: 14px;
    }

    .foot-note {
        text-align: center;
        margin-top: 18px;
        color: #5b78a6;
        font-size: 14px;
    }
</style>