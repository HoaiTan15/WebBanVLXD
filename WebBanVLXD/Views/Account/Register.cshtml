
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Đăng ký</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f3f3f3;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        .panel {
            max-width: 720px;
            margin: 56px auto;
            padding: 40px;
            background: #fff;
            border: 1px solid #eee;
            box-shadow: 0 0 0 8px rgba(0,0,0,0.02);
        }

        .panel-title {
            font-size: 22px;
            font-weight: 600;
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .form-control-lg {
            height: 52px;
            padding: 12px 14px;
            font-size: 15px;
        }

        .btn-register {
            background: #b33a32;
            border-color: #b33a32;
            color: #fff;
            height: 48px;
            font-size: 16px;
            font-weight: 600;
        }

        .muted-note {
            color: #6b7280;
            font-size: 13px;
            text-align: center;
            margin-top: 12px;
        }

        .eye-btn {
            position: absolute;
            right: 12px;
            top: 10px;
            border: none;
            background: transparent;
        }

        .input-with-eye {
            position: relative;
        }

        .required-star {
            color: #d9534f;
            margin-right: 6px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="panel">
            <h2 class="panel-title">Đăng ký</h2>

            @if (TempData["RegisterSuccess"] != null)
            {
                <div class="alert alert-success">@TempData["RegisterSuccess"]</div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var m in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {<div>@m.ErrorMessage</div>}
                </div>
            }

            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <input name="TenNguoiDung" id="TenNguoiDung" class="form-control form-control-lg" placeholder="Họ tên người dùng" required />
                </div>

                <div class="mb-3 input-with-eye">
                    <input name="MatKhau" id="MatKhau" type="password" class="form-control form-control-lg" placeholder="Mật khẩu" required />
                    <button type="button" class="eye-btn" onclick="togglePwd('MatKhau')">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none"><path d="M12 5c-7 0-11 6-11 7s4 7 11 7 11-6 11-7-4-7-11-7z" stroke="#888" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round" /><circle cx="12" cy="12" r="3" stroke="#888" stroke-width="1.2" /></svg>
                    </button>
                </div>

                <div class="mb-3 input-with-eye">
                    <input name="XacNhan" id="XacNhan" type="password" class="form-control form-control-lg" placeholder="Nhập lại mật khẩu" required />
                    <button type="button" class="eye-btn" onclick="togglePwd('XacNhan')">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none"><path d="M12 5c-7 0-11 6-11 7s4 7 11 7 11-6 11-7-4-7-11-7z" stroke="#888" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round" /><circle cx="12" cy="12" r="3" stroke="#888" stroke-width="1.2" /></svg>
                    </button>
                </div>

                <div class="mb-3">
                    <input name="Email" id="Email" type="email" class="form-control form-control-lg" placeholder="Email" required />
                    <div class="form-text">Email là bắt buộc để khôi phục tài khoản.</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Số điện thoại</label>
                    <input name="SDT" id="SDT" class="form-control form-control-lg" placeholder="Số điện thoại (tùy chọn)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Địa chỉ</label>
                    <input name="DiaChi" id="DiaChi" class="form-control form-control-lg" placeholder="Địa chỉ (tùy chọn)" />
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-register w-100">Đăng Ký Ngay</button>
                </div>

             
            }
        </div>
    </div>

    <script>function togglePwd(id) {
            var el = document.getElementById(id);
            if (!el) return;
            el.type = el.type === 'password' ? 'text' : 'password';
        }</script>
</body>
</html>