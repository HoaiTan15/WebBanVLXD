@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Quên mật khẩu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f3f3f3;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        .panel {
            max-width: 720px;
            margin: 64px auto;
            padding: 42px;
            background: #fff;
            border: 1px solid #eee;
            box-shadow: 0 0 0 8px rgba(0,0,0,0.02);
        }

        .panel-title {
            font-size: 34px;
            font-weight: 600;
            margin-bottom: 12px;
            color: #333;
        }

        .panel-desc {
            color: #6b7280;
            margin-bottom: 24px;
        }

        .form-control-lg {
            height: 56px;
            padding: 14px 18px;
            font-size: 16px;
        }

        .btn-primary-lg {
            background: #b33a32;
            border-color: #b33a32;
            color: #fff;
            height: 52px;
            font-size: 18px;
            font-weight: 600;
        }

        .otp-row .input-group-text {
            background: #fff;
            border-right: 0;
        }

        .otp-row .form-control {
            border-left: 0;
        }

        .muted-sep {
            height: 1px;
            background: #f0f0f0;
            margin: 22px 0;
        }

        .note {
            text-align: center;
            margin-top: 18px;
            color: #5b78a6;
        }

        .alert-inline {
            margin-bottom: 16px;
            display: none;
        }

        .btn-send-otp {
            min-width: 120px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="panel">
            <h1 class="panel-title">Thay đổi mật khẩu</h1>
            <p class="panel-desc">Vui lòng điền Tài khoản (Email) bạn sử dụng để đăng nhập. Sau khi nhận mã OTP, nhập mã dưới và tiếp tục.</p>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var m in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {<div>@m.ErrorMessage</div>}
                </div>
            }

            @using (Html.BeginForm("VerifyOtp", "Account", FormMethod.Post, new { @id = "verifyForm" }))
            {
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="form-label visually-hidden" for="Email">Tài khoản Email</label>
                    <input id="Email" name="Email" type="email" class="form-control form-control-lg" placeholder="Tài khoản Email" required />
                </div>

                <div class="mb-3 otp-row">
                    <div class="input-group">
                        <input id="Otp" name="Otp" type="text" class="form-control form-control-lg" placeholder="Mã OTP" aria-label="Mã OTP" required />
                        <button id="sendOtpBtn" type="button" class="btn btn-outline-secondary btn-send-otp">Gửi mã</button>
                    </div>
                    <small class="text-muted d-block mt-2">Mã OTP sẽ được gửi đến email nếu tài khoản tồn tại.</small>
                </div>

                <div class="muted-sep"></div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary-lg w-100">Tiếp theo</button>
                </div>

                <div class="note">
                    <a href="@Url.Action("Login","Account")">Quay lại đăng nhập</a>
                </div>
            }
        </div>
    </div>

    <script>
        (function(){
            var sendBtn = document.getElementById('sendOtpBtn');
            var emailInput = document.getElementById('Email');
            var verifyForm = document.getElementById('verifyForm');

            function showTempMessage(msg, isError) {
                var el = document.createElement('div');
                el.className = 'alert ' + (isError ? 'alert-danger' : 'alert-success');
                el.textContent = msg;
                verifyForm.parentNode.insertBefore(el, verifyForm);
                setTimeout(function(){ el.remove(); }, 5000);
            }

            sendBtn.addEventListener('click', function () {
                var email = emailInput.value.trim();
                if (!email) {
                    showTempMessage('Vui lòng nhập Email trước khi gửi mã.', true);
                    return;
                }

                sendBtn.disabled = true;
                sendBtn.textContent = 'Đang gửi...';

                // read antiforgery token
                var tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                var token = tokenInput ? tokenInput.value : '';

                fetch('@Url.Action("SendOtp","Account")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json;charset=utf-8',
                        'X-RequestVerificationToken': token
                    },
                    body: JSON.stringify({ Email: email })
                })
                .then(function (r) { return r.json(); })
                .then(function (data) {
                    if (data && data.success) {
                        showTempMessage(data.message || 'Mã đã được gửi. Kiểm tra email.');
                    } else {
                        showTempMessage(data && data.message ? data.message : 'Không thể gửi mã. Thử lại.', true);
                    }
                })
                .catch(function (err) {
                    showTempMessage('Lỗi khi gửi mã. Thử lại sau.', true);
                    console.error(err);
                })
                .finally(function () {
                    sendBtn.disabled = false;
                    sendBtn.textContent = 'Gửi mã';
                });
            });
        })();
    </script>
</body>
</html>