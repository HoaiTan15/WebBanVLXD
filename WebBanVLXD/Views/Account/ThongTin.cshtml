@model WebBanVLXD.Models.NGUOIDUNG
@{
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
    ViewBag.Title = "Thông tin tài khoản";
}

<div class="container my-4">

    @if (TempData["Loi"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-triangle-exclamation me-2"></i>
            @TempData["Loi"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["UpdateSuccess"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-circle-check me-2"></i>
            @TempData["UpdateSuccess"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm p-4">
        <h4 class="mb-3 text-primary">
            <i class="fa-solid fa-user-circle me-2"></i> Thông tin tài khoản
        </h4>

        <dl class="row mb-0">
            <dt class="col-sm-3">Mã người dùng:</dt>
            <dd class="col-sm-9">@Model.MaUser</dd>

            <dt class="col-sm-3">Họ tên:</dt>
            <dd class="col-sm-9">@Model.TenNguoiDung</dd>

            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Số điện thoại:</dt>
            <dd class="col-sm-9">@Model.SDT</dd>

            <dt class="col-sm-3">Địa chỉ:</dt>
            <dd class="col-sm-9">@Model.DiaChi</dd>

            <dt class="col-sm-3">Vai trò:</dt>
            <dd class="col-sm-9 text-capitalize">@Model.Role</dd>
        </dl>

        <div class="mt-4 text-end">
            <button class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#editModal">
                <i class="fa-solid fa-pen-to-square me-1"></i> Chỉnh sửa
            </button>

            <a href="@Url.Action("Index","SanPham")" class="btn btn-outline-secondary">Quay lại</a>
        </div>
    </div>
</div>

<!-- ------------------------------------------------------ -->
<!-- MODAL SỬA THÔNG TIN -->
<!-- ------------------------------------------------------ -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <form method="post" action="@Url.Action("SuaThongTin", "Account")">
                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fa-solid fa-pen-to-square me-2"></i> Sửa thông tin
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <input type="hidden" name="MaUser" value="@Model.MaUser" />

                    <div class="mb-3">
                        <label class="form-label">Họ tên</label>
                        <input type="text" name="TenNguoiDung" class="form-control" value="@Model.TenNguoiDung" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Số điện thoại</label>
                        <input type="text" name="SDT" class="form-control" value="@Model.SDT" />
                    </div>

                    <p class="text-muted" style="font-size: 14px;">
                        <i class="fa-solid fa-circle-info me-1"></i>
                        Vui lòng điền địa chỉ trước sáp nhập.
                    </p>

                    <div class="mb-3">
                        <label class="form-label">Tỉnh / Thành phố</label>
                        <select id="tinh" class="form-select" required></select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Quận / Huyện</label>
                        <select id="huyen" class="form-select" required></select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Phường / Xã</label>
                        <select id="xa" class="form-select" required></select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Số nhà & Tên đường</label>
                        <input type="text" id="sonha" class="form-control" placeholder="Ví dụ: 123 Lê Lợi" />
                    </div>

                    <input type="hidden" name="DiaChi" id="DiaChi" />

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </div>

            </form>

        </div>
    </div>
</div>

<!-- ------------------------------------------------------ -->
<!-- SCRIPT API TỈNH HUYỆN XÃ + AUTO FILL -->
<!-- ------------------------------------------------------ -->
<script>
    // ---- tách địa chỉ cũ (nếu có) ----
    let oldAddress = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.DiaChi));
    let oldHouse = "";
    let oldXa = "";
    let oldHuyen = "";
    let oldTinh = "";

    if (oldAddress && oldAddress.includes(",")) {
        let parts = oldAddress.split(",").map(p => p.trim());
        oldHouse = parts[0];
        oldXa = parts[1];
        oldHuyen = parts[2];
        oldTinh = parts[3];
    }

    document.getElementById("sonha").value = oldHouse;

    // -----------------------------
    // LOAD TỈNH
    // -----------------------------
    fetch("https://provinces.open-api.vn/api/p/")
        .then(res => res.json())
        .then(data => {
            let opt = '<option value="">-- Chọn tỉnh --</option>';
            data.forEach(t => {
                opt += `<option value="${t.code}" ${t.name === oldTinh ? "selected" : ""}>${t.name}</option>`;
            });
            document.getElementById("tinh").innerHTML = opt;

            if (oldTinh) loadHuyenAuto();
        });

    // -----------------------------
    // LOAD HUYỆN THEO TỈNH
    // -----------------------------
    function loadHuyenAuto() {
        let code = document.querySelector("#tinh option:checked")?.value;

        fetch(`https://provinces.open-api.vn/api/p/${code}?depth=2`)
            .then(res => res.json())
            .then(data => {
                let opt = '<option value="">-- Chọn huyện --</option>';
                data.districts.forEach(h => {
                    opt += `<option value="${h.code}" ${h.name === oldHuyen ? "selected" : ""}>${h.name}</option>`;
                });
                document.getElementById("huyen").innerHTML = opt;

                if (oldHuyen) loadXaAuto();
            });
    }

    document.getElementById("tinh").addEventListener("change", loadHuyenAuto);

    // -----------------------------
    // LOAD XÃ
    // -----------------------------
    function loadXaAuto() {
        let code = document.querySelector("#huyen option:checked")?.value;

        fetch(`https://provinces.open-api.vn/api/d/${code}?depth=2`)
            .then(res => res.json())
            .then(data => {
                let opt = '<option value="">-- Chọn xã --</option>';
                data.wards.forEach(x => {
                    opt += `<option value="${x.name}" ${x.name === oldXa ? "selected" : ""}>${x.name}</option>`;
                });
                document.getElementById("xa").innerHTML = opt;
            });
    }

    document.getElementById("huyen").addEventListener("change", loadXaAuto);

    // -----------------------------
    // GHÉP ĐỊA CHỈ KHI SUBMIT
    // -----------------------------
    document.querySelector("#editModal form").addEventListener("submit", function () {
        let tinh = document.querySelector("#tinh option:checked")?.textContent;
        let huyen = document.querySelector("#huyen option:checked")?.textContent;
        let xa = document.querySelector("#xa option:checked")?.textContent;
        let sonha = document.getElementById("sonha").value;

        let fullAddress = `${sonha}, ${xa}, ${huyen}, ${tinh}`;
        document.getElementById("DiaChi").value = fullAddress;
    });
</script>
