@model WebBanVLXD.Models.DoiMatKhau
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Cài đặt mật khẩu mới</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f3f3f3;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        .panel {
            max-width: 720px;
            margin: 64px auto;
            padding: 42px;
            background: #fff;
            border: 1px solid #eee;
            box-shadow: 0 0 0 8px rgba(0,0,0,0.02);
        }

        .panel-title {
            font-size: 34px;
            font-weight: 600;
            margin-bottom: 12px;
            color: #333;
        }

        .panel-desc {
            color: #6b7280;
            margin-bottom: 24px;
            line-height: 1.5;
        }

        .form-control-lg {
            height: 56px;
            padding: 14px 18px;
            font-size: 16px;
        }

        .btn-primary-lg {
            background: #b33a32;
            border-color: #b33a32;
            color: #fff;
            height: 52px;
            font-size: 18px;
            font-weight: 600;
        }

        .muted-sep {
            height: 1px;
            background: #f0f0f0;
            margin: 22px 0;
        }

        .note {
            text-align: center;
            margin-top: 18px;
            color: #5b78a6;
        }

        .input-with-eye {
            position: relative;
        }

        .eye-btn {
            position: absolute;
            right: 12px;
            top: 12px;
            border: none;
            background: transparent;
            padding: 0;
        }

        .validation-summary {
            margin-bottom: 16px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="panel">
            <h1 class="panel-title">Cài đặt mật khẩu mới</h1>


            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger validation-summary">
                    @Html.ValidationSummary(false)
                </div>
            }

            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Token)

                <div class="mb-3 input-with-eye">
                    @Html.PasswordFor(m => m.MatKhauMoi, new { @class = "form-control form-control-lg", placeholder = "Nhập mật khẩu mới của bạn", required = "required", autocomplete = "new-password" })
                    @Html.ValidationMessageFor(m => m.MatKhauMoi, "", new { @class = "text-danger" })
                    <button type="button" class="eye-btn" onclick="togglePwd('MatKhauMoi')">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true"><path d="M12 5c-7 0-11 6-11 7s4 7 11 7 11-6 11-7-4-7-11-7z" stroke="#888" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round" /><circle cx="12" cy="12" r="3" stroke="#888" stroke-width="1.2" /></svg>
                    </button>
                </div>

                <div class="mb-3 input-with-eye">
                    @Html.PasswordFor(m => m.XacNhanMatKhau, new { @class = "form-control form-control-lg", placeholder = "Nhập lại mật khẩu mới của bạn", required = "required", autocomplete = "new-password" })
                    @Html.ValidationMessageFor(m => m.XacNhanMatKhau, "", new { @class = "text-danger" })
                    <button type="button" class="eye-btn" onclick="togglePwd('XacNhanMatKhau')">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true"><path d="M12 5c-7 0-11 6-11 7s4 7 11 7 11-6 11-7-4-7-11-7z" stroke="#888" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round" /><circle cx="12" cy="12" r="3" stroke="#888" stroke-width="1.2" /></svg>
                    </button>
                </div>

                <div class="muted-sep"></div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary-lg w-100">XÁC NHẬN</button>
                </div>

                <div class="note">
                    <a href="@Url.Action("Login","Account")">Quay lại đăng nhập</a>
                </div>
            }
        </div>
    </div>

    <script>function togglePwd(fieldName) {
            // fieldName corresponds to generated id: prefix with model name if MVC generated id includes it
            var el = document.getElementById(fieldName) || document.getElementsByName(fieldName)[0];
            if (!el) {
                // try MVC-generated id format (Model_Property)
                el = document.getElementById('MatKhauMoi') || document.getElementById('XacNhanMatKhau');
            }
            if (!el) return;
            el.type = (el.type === 'password') ? 'text' : 'password';
        }

        // Ensure toggle buttons target the correct elements by setting ids consistent with Html helpers
        (function() {
            var pwd1 = document.getElementsByName('MatKhauMoi')[0];
            var pwd2 = document.getElementsByName('XacNhanMatKhau')[0];
            if (pwd1) pwd1.id = 'MatKhauMoi';
            if (pwd2) pwd2.id = 'XacNhanMatKhau';
        })();</script>
</body>
</html>