@model IEnumerable<WebBanVLXD.Models.SANPHAM>
@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}

<div class="container mt-4 mb-4">
    <div class="alert alert-success shadow-sm">
        <h4><i class="fa fa-briefcase"></i> Bảng điều khiển quản lý</h4>
        <div class="d-flex flex-wrap gap-2 mt-3">
            <a href="@Url.Action("QLSanPham","QuanLy")" class="btn btn-primary"><i class="fa fa-box"></i> Quản lý sản phẩm</a>
            <a href="@Url.Action("QLNhapHang","QuanLy")" class="btn btn-success"><i class="fa fa-download"></i> Nhập hàng</a>
            <a href="@Url.Action("QLTonKho","QuanLy")" class="btn btn-info text-white"><i class="fa fa-cubes"></i> Tồn kho</a>
            <a href="@Url.Action("BaoCaoDoanhThu","QuanLy")" class="btn btn-danger"><i class="fa fa-bar-chart"></i> Báo cáo</a>
            <a href="@Url.Action("QLDonHang","QuanLy")" class="btn btn-primary btn-lg"><i class="fa fa-box"></i> Đơn hàng</a>
        </div>
    </div>
</div>

<div class="container mt-4">
    <h3 class="mb-4 text-primary"><i class="fa fa-box"></i> Quản lý sản phẩm</h3>

    <!-- THÔNG BÁO -->
    @if (TempData["ThongBao"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa fa-check-circle"></i> @TempData["ThongBao"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- FORM THÊM SẢN PHẨM -->
    <form action="@Url.Action("ThemSanPham", "QuanLy")" method="post" class="row g-2 mb-4 border p-3 rounded shadow-sm" enctype="multipart/form-data">
        <div class="col-md-3">
            <input type="text" name="ten" class="form-control" placeholder="Tên sản phẩm" required />
        </div>
        <div class="col-md-2">
            <input type="number" step="1" name="dongia" class="form-control" placeholder="Đơn giá" required />
        </div>
        <div class="col-md-2">
            <input type="text" name="dvt" class="form-control" placeholder="Đơn vị tính" required />
        </div>
        <div class="col-md-1">
            <input type="number" name="sl" class="form-control" placeholder="SL" required />
        </div>
        <div class="col-md-4">
            <input type="text" name="mota" class="form-control" placeholder="Mô tả" />
        </div>
        <div class="col-md-3">
            <input type="text" name="mancc" class="form-control" placeholder="Mã NCC" />
        </div>
        <div class="col-md-3">
            <input type="text" name="madm" class="form-control" placeholder="Mã DM" />
        </div>
        <div class="col-md-3">
            <input type="file" name="hinhanh" class="form-control" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-success w-100">
                <i class="fa fa-plus"></i> Thêm
            </button>
        </div>
    </form>

    <!-- FORM LỌC -->
    <form method="get" action="@Url.Action("QLSanPham", "QuanLy")" class="d-flex mb-3">

        <input type="text"
               name="keyword"
               value="@ViewBag.Keyword"
               class="form-control w-25 me-2"
               placeholder="Tìm theo mã hoặc tên sản phẩm...">

        <select name="tonkho" class="form-control w-25 me-2">
            <option value="all" @(ViewBag.TonKho == "all" || ViewBag.TonKho == null ? "selected" : "")>Tất cả</option>
            <option value="instock" @(ViewBag.TonKho == "instock" ? "selected" : "")>Còn hàng (Tồn > 0)</option>
            <option value="outstock" @(ViewBag.TonKho == "outstock" ? "selected" : "")>Hết hàng (Tồn = 0)</option>
        </select>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Lọc
        </button>
    </form>

    <!-- DANH SÁCH SẢN PHẨM -->
    <table class="table table-bordered table-hover shadow-sm align-middle">
        <thead class="table-light text-center">
            <tr>
                <th style="width: 6%">Mã</th>
                <th style="width: 20%">Tên sản phẩm</th>
                <th style="width: 10%">Đơn giá</th>
                <th style="width: 8%">Tồn kho</th>
                <th style="width: 10%">Hình ảnh</th>
                <th style="width: 20%">Mô tả</th>
                <th style="width: 8%">Trạng thái</th>
                <th style="width: 18%">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sp in Model)
            {
                <tr>
                    <td class="text-center">
                        <strong>@sp.MaSP</strong>
                    </td>

                    <!-- Tên sản phẩm -->
                    <td>
                        <input type="text" id="ten_@sp.MaSP" value="@sp.TenSP" class="form-control form-control-sm" />
                    </td>

                    <!-- Đơn giá -->
                    <td>
                        <input type="number" step="1" id="dongia_@sp.MaSP" value="@sp.DonGia" class="form-control form-control-sm" />
                    </td>

                    <!-- Tồn kho -->
                    <td>
                        <input type="number" id="sl_@sp.MaSP" value="@sp.SoLuongTon" class="form-control form-control-sm" />
                    </td>

                    <!-- Hình ảnh -->
                    <td class="text-center">
                        <img src="~/@sp.HinhAnh" width="60" height="60" class="rounded border" />
                    </td>

                    <!-- Mô tả -->
                    <td>@sp.MoTa</td>

                    <!-- TRẠNG THÁI -->
                    <td class="text-center">
                        @if (sp.TrangThai == "NgungKinhDoanh")
                        {
                            <span class="badge bg-danger">Ngừng KD</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Đang bán</span>
                        }
                    </td>

                    <!-- Thao tác -->
                    <td class="text-center">
                        <button type="button" onclick="submitCapNhat('@sp.MaSP')" class="btn btn-sm btn-primary w-100 mb-1">
                            <i class="fa fa-save"></i> Cập nhật
                        </button>

                        <!-- NÚT NGỪNG KINH DOANH / KINH DOANH LẠI -->
                        @if (sp.TrangThai == "NgungKinhDoanh")
                        {
                            <!-- KINH DOANH LẠI -->
                            <button type="button" class="btn btn-sm btn-success w-100" onclick="submitKinhDoanhLai('@sp.MaSP')">
                                <i class="fa fa-undo"></i> Kinh doanh lại
                            </button>
                        }
                        else
                        {
                            <!-- NGỪNG KINH DOANH -->
                            <button type="button" class="btn btn-sm btn-danger w-100" onclick="submitNgungKinhDoanh('@sp.MaSP')">
                                <i class="fa fa-ban"></i> Ngừng KD
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
function submitCapNhat(ma) {
    var f = document.createElement('form');
    f.method = 'post';
    f.action = '@Url.Action("CapNhatSanPham","QuanLy")';
    f.enctype = 'multipart/form-data';

    var inputMa = document.createElement('input');
    inputMa.type = 'hidden';
    inputMa.name = 'ma';
    inputMa.value = ma;
    f.appendChild(inputMa);

    var inputTen = document.createElement('input');
    inputTen.type = 'hidden';
    inputTen.name = 'ten';
    inputTen.value = document.getElementById('ten_' + ma).value;
    f.appendChild(inputTen);

    var inputDonGia = document.createElement('input');
    inputDonGia.type = 'hidden';
    inputDonGia.name = 'dongia';
    inputDonGia.value = document.getElementById('dongia_' + ma).value;
    f.appendChild(inputDonGia);

    var inputSL = document.createElement('input');
    inputSL.type = 'hidden';
    inputSL.name = 'sl';
    inputSL.value = document.getElementById('sl_' + ma).value;
    f.appendChild(inputSL);

    document.body.appendChild(f);
    f.submit();
}

function submitNgungKinhDoanh(ma) {
    if (!confirm('Bạn chắc chắn muốn NGỪNG bán sản phẩm này?')) return;
    var f = document.createElement('form');
    f.method = 'post';
    f.action = '@Url.Action("NgungKinhDoanh","QuanLy")';
    var i = document.createElement('input');
    i.type = 'hidden';
    i.name = 'ma';
    i.value = ma;
    f.appendChild(i);
    document.body.appendChild(f);
    f.submit();
}

function submitKinhDoanhLai(ma) {
    if (!confirm('Bạn muốn mở bán lại sản phẩm này?')) return;
    var f = document.createElement('form');
    f.method = 'post';
    f.action = '@Url.Action("KinhDoanhLai","QuanLy")';
    var i = document.createElement('input');
    i.type = 'hidden';
    i.name = 'ma';
    i.value = ma;
    f.appendChild(i);
    document.body.appendChild(f);
    f.submit();
}
</script>