@model List<WebBanVLXD.Models.SANPHAM>
@{
    ViewBag.Title = "Quản lý tồn kho";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}
<div class="container mt-4 mb-4">
    <div class="alert alert-success shadow-sm">
        <h4><i class="fa fa-briefcase"></i> Bảng điều khiển quản lý</h4>
        <div class="d-flex flex-wrap gap-2 mt-3">
            <a href="@Url.Action("QLSanPham","QuanLy")" class="btn btn-primary"><i class="fa fa-box"></i> Quản lý sản phẩm</a>
            <a href="@Url.Action("QLNhapHang","QuanLy")" class="btn btn-success"><i class="fa fa-download"></i> Nhập hàng</a>
            <a href="@Url.Action("QLTonKho","QuanLy")" class="btn btn-info text-white"><i class="fa fa-cubes"></i> Tồn kho</a>
            <a href="@Url.Action("BaoCaoDoanhThu","QuanLy")" class="btn btn-danger"><i class="fa fa-bar-chart"></i> Báo cáo</a>
            <a href="@Url.Action("QLDonHang","QuanLy")" class="btn btn-primary btn-lg"><i class="fa fa-box"></i> Đơn hàng</a>
        </div>
    </div>
</div>
<div class="container mt-4">
    <h3 class="mb-3 text-primary">
        <i class="fa fa-cubes"></i> Quản lý tồn kho
    </h3>

    <table class="table table-bordered table-hover text-center align-middle">
        <thead class="table-light">
            <tr>
                <th>Mã SP</th>
                <th>Tên sản phẩm</th>
                <th>Đơn vị</th>
                <th>Số lượng tồn</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sp in Model)
            {
                string trangThai;
                string mau;

                if (sp.SoLuongTon <= 5)
                {
                    trangThai = "Sắp hết hàng";
                    mau = "text-danger fw-bold";
                }
                else if (sp.SoLuongTon <= 50)
                {
                    trangThai = "Còn ít";
                    mau = "text-warning fw-bold";
                }
                else
                {
                    trangThai = "Còn nhiều";
                    mau = "text-success fw-bold";
                }

                <tr>
                    <td>@sp.MaSP</td>
                    <td>@sp.TenSP</td>
                    <td>@sp.DonViTinh</td>
                    <td>@sp.SoLuongTon</td>
                    <td class="@mau">@trangThai</td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("Index", "SanPham")" class="btn btn-secondary mt-3">
        <i class="fa fa-arrow-left"></i> Quay lại trang quản lý
    </a>
</div>
