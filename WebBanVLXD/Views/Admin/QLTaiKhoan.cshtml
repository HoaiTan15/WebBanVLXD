@model List<WebBanVLXD.Models.NGUOIDUNG>
@{
    ViewBag.Title = "Danh sách tài khoản";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container mt-4 mb-4">
    <div class="alert alert-primary shadow-sm">
        <h4><i class="fa fa-gear"></i> Bảng điều khiển quản trị</h4>
        <div class="d-flex flex-wrap gap-2 mt-3">
            <a href="@Url.Action("QLTaiKhoan","Admin")" class="btn btn-info"><i class="fa fa-users"></i> Quản lý tài khoản</a>
            <a href="@Url.Action("QLSanPham","Admin")" class="btn btn-success"><i class="fa fa-box"></i> Quản lý sản phẩm</a>
            <a href="@Url.Action("PhanQuyen","Admin")" class="btn btn-warning text-dark"><i class="fa fa-user-shield"></i> Phân quyền</a>
            <a href="@Url.Action("ThongKe","Admin")" class="btn btn-secondary"><i class="fa fa-chart-line"></i> Thống kê</a>
        </div>
    </div>
</div>
<div class="container mt-4">

    <h3 class="mb-4">
        <i class="fa fa-users"></i> Danh sách tài khoản
    </h3>

    <!-- NÚT THÊM -->
    <button class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#addUserModal">
        <i class="fa fa-plus-circle"></i> Thêm tài khoản mới
    </button>

    <!-- ============================== -->
    <!-- POPUP THÊM TÀI KHOẢN -->
    <!-- ============================== -->
    <div class="modal fade" id="addUserModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fa fa-user-plus"></i> Thêm tài khoản mới
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <form method="post" action="@Url.Action("ThemTaiKhoan","Admin")">
                    <div class="modal-body">
                        <div class="row g-3">

                            <div class="col-md-6">
                                <label class="form-label">Tên người dùng</label>
                                <input name="TenNguoiDung" class="form-control" required />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Email</label>
                                <input name="Email" class="form-control" type="email" required />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Mật khẩu</label>
                                <input name="MatKhau" type="password" class="form-control" required />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">SĐT</label>
                                <input name="SDT" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Địa chỉ</label>
                                <input name="DiaChi" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Vai trò</label>
                                <select name="Role" class="form-select">
                                    <option value="khach">Khách</option>
                                    <option value="quanly">Quản lý</option>
                                    <option value="admin">Admin</option>
                                </select>
                            </div>

                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-check"></i> Thêm
                        </button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <!-- ============================== -->
    <!-- BẢNG DANH SÁCH TÀI KHOẢN -->
    <!-- ============================== -->
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Họ tên</th>
                <th>Email</th>
                <th>SĐT</th>
                <th>Địa chỉ</th>
                <th>Vai trò</th>
                <th>Trạng thái</th>
                <th>Ngày tạo</th>
                <th>Thao tác</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.TenNguoiDung</td>
                    <td>@u.Email</td>
                    <td>@u.SDT</td>
                    <td>@u.DiaChi</td>

                    <td>
                        @if (u.Role == "admin")
                        {
                            <span class="badge bg-danger">Admin</span>
                        }
                        else if (u.Role == "quanly")
                        {
                            <span class="badge bg-info text-dark">Quản lý</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Khách</span>
                        }
                    </td>

                    <td class="text-success fw-bold">Hoạt động</td>

                    <td>@u.NgayTao.ToString("dd/MM/yyyy")</td>

                    <td>

                        <!-- NÚT SỬA -->
                        <button class="btn btn-warning btn-sm me-1"
                                onclick="showEditModal(
                                    '@u.MaUser',
                                    '@u.TenNguoiDung',
                                    '@u.Email',
                                    '@u.SDT',
                                    '@u.DiaChi',
                                    '@u.Role'
                                )">
                            <i class="fa fa-edit"></i>
                        </button>

                        <!-- NÚT XÓA -->
                        <a href="@Url.Action("XoaTaiKhoan","Admin", new { ma = u.MaUser.Trim() })"
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('Bạn có chắc muốn xóa tài khoản này?');">
                            <i class="fa fa-trash"></i>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<!-- ============================== -->
<!-- POPUP SỬA TÀI KHOẢN -->
<!-- ============================== -->
<div class="modal fade" id="editUserModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fa fa-edit"></i> Sửa tài khoản
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form method="post" action="@Url.Action("SuaTaiKhoan","Admin")"
                  onsubmit="return validateEditForm()">
                <div class="modal-body">

                    <input type="hidden" id="edit_ma" name="MaUser" />

                    <div class="row g-3">

                        <div class="col-md-6">
                            <label class="form-label">Tên người dùng</label>
                            <input id="edit_ten" name="TenNguoiDung" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input id="edit_email" name="Email" type="email" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">SĐT</label>
                            <input id="edit_sdt" name="SDT" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Địa chỉ</label>
                            <input id="edit_diachi" name="DiaChi" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Vai trò</label>
                            <select id="edit_role" name="Role" class="form-select">
                                <option value="khach">Khách</option>
                                <option value="quanly">Quản lý</option>
                                <option value="admin">Admin</option>
                            </select>
                        </div>

                    </div>

                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-check"></i> Lưu thay đổi
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                </div>

            </form>

        </div>
    </div>
</div>

<!-- ============================== -->
<!-- SCRIPT -->
<!-- ============================== -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    function showEditModal(ma, ten, email, sdt, diachi, role) {

        document.getElementById("edit_ma").value = ma;
        document.getElementById("edit_ten").value = ten;
        document.getElementById("edit_email").value = email;
        document.getElementById("edit_sdt").value = sdt;
        document.getElementById("edit_diachi").value = diachi;
        document.getElementById("edit_role").value = role;

        var modal = new bootstrap.Modal(document.getElementById('editUserModal'));
        modal.show();
    }
</script>
<script>
    function validateEditForm() {
        let ten = document.getElementById("edit_ten").value.trim();
        let email = document.getElementById("edit_email").value.trim();

        if (ten === "" || email === "") {
            return confirm("⚠ Một số thông tin bắt buộc đang trống.\nBạn có chắc muốn lưu không?");
        }

        return true;
    }
</script>