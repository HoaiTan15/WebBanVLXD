@model List<WebBanVLXD.Models.SANPHAM>
@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}
<div class="container mt-4 mb-4">
    <div class="alert alert-primary shadow-sm">
        <h4><i class="fa fa-gear"></i> Bảng điều khiển quản trị</h4>
        <div class="d-flex flex-wrap gap-2 mt-3">
            <a href="@Url.Action("QLTaiKhoan","Admin")" class="btn btn-info"><i class="fa fa-users"></i> Quản lý tài khoản</a>
            <a href="@Url.Action("QLSanPham","Admin")" class="btn btn-success"><i class="fa fa-box"></i> Quản lý sản phẩm</a>
            <a href="@Url.Action("PhanQuyen","Admin")" class="btn btn-warning text-dark"><i class="fa fa-user-shield"></i> Phân quyền</a>
            <a href="@Url.Action("ThongKe","Admin")" class="btn btn-secondary"><i class="fa fa-chart-line"></i> Thống kê</a>
        </div>
    </div>
</div>

<div class="container mt-4 mb-5">
    <h3 class="fw-bold text-primary mb-3">
        <i class="fa fa-cubes"></i> Danh sách sản phẩm
    </h3>

    <!-- THÔNG BÁO -->
    @if (TempData["ThongBao"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa fa-check-circle"></i> @TempData["ThongBao"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Form thêm sản phẩm -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title text-success mb-3"><i class="fa fa-plus-circle"></i> Thêm sản phẩm mới</h5>

            <form method="post" action="@Url.Action("ThemSanPham", "Admin")" enctype="multipart/form-data" class="row g-3">

                <div class="col-md-3">
                    <input name="ten" class="form-control" placeholder="Tên sản phẩm" required />
                </div>

                <div class="col-md-2">
                    <input name="dongia" type="number" step="1" class="form-control" placeholder="Đơn giá" required />
                </div>

                <div class="col-md-2">
                    <input name="dvt" class="form-control" placeholder="Đơn vị tính" required />
                </div>

                <div class="col-md-1">
                    <input name="sl" type="number" class="form-control" placeholder="SL" required />
                </div>

                <div class="col-md-4">
                    <textarea name="mota" class="form-control" rows="1" placeholder="Mô tả"></textarea>
                </div>

                <div class="col-md-3">
                    <select name="mancc" class="form-control" required>
                        <option value="">-- Chọn nhà cung cấp --</option>
                        @foreach (var ncc in ViewBag.NCC)
                        {
                            <option value="@ncc.MaNCC">@ncc.MaNCC - @ncc.TenNCC</option>
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <select name="madm" class="form-control" required>
                        <option value="">-- Chọn danh mục --</option>
                        @foreach (var dm in ViewBag.DM)
                        {
                            <option value="@dm.MaDM">@dm.MaDM - @dm.TenDM</option>
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <input type="file"
                           name="uploadFile"
                           class="form-control"
                           accept=".jpg,.jpeg,.png"
                           required />
                </div>

                <div class="col-md-2">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="fa fa-plus"></i> Thêm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- FORM LỌC -->
    <form method="get" action="@Url.Action("QLSanPham", "Admin")" class="d-flex mb-3">
        <input type="text"
               name="keyword"
               value="@ViewBag.Keyword"
               class="form-control w-25 me-2"
               placeholder="Tìm theo mã hoặc tên sản phẩm...">

        <select name="tonkho" class="form-control w-25 me-2">
            <option value="all" @(ViewBag.TonKho == "all" || ViewBag.TonKho == null ? "selected" : "")>Tất cả</option>
            <option value="instock" @(ViewBag.TonKho == "instock" ? "selected" : "")>Còn hàng (Tồn > 0)</option>
            <option value="outstock" @(ViewBag.TonKho == "outstock" ? "selected" : "")>Hết hàng (Tồn = 0)</option>
        </select>

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-search"></i> Lọc
        </button>
    </form>

    <!-- Danh sách sản phẩm -->
    <table class="table table-bordered table-hover align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Mã SP</th>
                <th>Tên sản phẩm</th>
                <th>Đơn giá</th>
                <th>Đơn vị</th>
                <th>Tồn kho</th>
                <th>Hình ảnh</th>
                <th>Mô tả</th>
                <th>Nhà CC</th>
                <th>Danh mục</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sp in Model)
            {
                <tr>
                    <td><strong>@sp.MaSP</strong></td>
                    <td>@sp.TenSP</td>
                    <td>@String.Format("{0:N0} đ", sp.DonGia)</td>
                    <td>@sp.DonViTinh</td>
                    <td>@sp.SoLuongTon</td>
                    <td>
                        <img src="@Url.Content("~/" + sp.HinhAnh)" alt="Ảnh" width="70" height="70"
                             style="object-fit:cover;border-radius:8px;" />
                    </td>
                    <td>@sp.MoTa</td>
                    <td>@sp.TenNCC</td>
                    <td>@sp.TenDM</td>

                    <!-- TRẠNG THÁI -->
                    <td>
                        @if (sp.TrangThai == "NgungKinhDoanh")
                        {
                            <span class="badge bg-danger">Ngừng KD</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Đang bán</span>
                        }
                    </td>

                    <td class="d-flex flex-column gap-2">

                        <!-- SỬA -->
                        <a href="@Url.Action("SuaSanPham", "Admin", new { id = sp.MaSP.Trim() })"
                           class="btn btn-warning btn-sm">
                            <i class="fa fa-edit"></i> Sửa
                        </a>

                        <!-- NÚT NGỪNG KINH DOANH / KINH DOANH LẠI (POST) -->
                        @if (sp.TrangThai == "NgungKinhDoanh")
                        {
                            <!-- KINH DOANH LẠI -->
                            <form method="post" action="@Url.Action("KinhDoanhLai", "Admin")"
                                  onsubmit="return confirm('Bạn muốn mở bán lại sản phẩm này?');">
                                <input type="hidden" name="ma" value="@sp.MaSP" />
                                <button class="btn btn-success btn-sm w-100">
                                    <i class="fa fa-undo"></i> Kinh doanh lại
                                </button>
                            </form>
                        }
                        else
                        {
                            <!-- NGỪNG KINH DOANH -->
                            <form method="post" action="@Url.Action("NgungKinhDoanh", "Admin")"
                                  onsubmit="return confirm('Bạn chắc chắn muốn NGỪNG bán sản phẩm này?');">
                                <input type="hidden" name="ma" value="@sp.MaSP" />
                                <button class="btn btn-danger btn-sm w-100">
                                    <i class="fa fa-ban"></i> Ngừng KD
                                </button>
                            </form>
                        }

                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>